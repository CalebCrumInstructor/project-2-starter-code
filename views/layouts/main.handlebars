<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    {{!-- <meta http-equiv="X-UA-Compatible" content="ie=edge"> --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dhurjati&family=Hedvig+Letters+Serif:opsz@12..24&family=Smooch&family=Space+Mono&family=Splash&family=Unbounded&display=swap" rel="stylesheet">

    <title>The Eerie Papers</title> {{! title }}
  </head>

  <body>
    <section class="fog">
      <div class='homepage-image'>
        <div class="absolute-bg"></div>
        <div class="fog-container">
          <div class="fog-img fog-img-1"></div>
          <div class="fog-img fog-img-2"></div>
        </div>

        <main class="main-container">
          <header class=''>
            <h1>
              <a  class="column is-full is-flex is-justify-content-center size-75 custom-font-ot2 title-color text-shadow" href='/'>The Eerie Papers</a> {{! subtitle }}
            </h1>
            <div class="column is-full is-flex is-justify-content-center size-25 custom-font-ot3 text-shadow">
              <nav>
                  <a class="has-text-weight-bold subtitle-color" href='/forums'>Forums</a>
                  <h7 class="has-text-weight-bold subtitle-color"> | </h7>
                <!-- Conditionally render login or logout links -->
                {{#if logged_in}}
                  <a class="has-text-weight-bold subtitle-color" href='/dashboard'>Dashboard</a>

                  <h7 class="has-text-weight-bold subtitle-color"> | </h7>
                  <a class="has-text-weight-bold subtitle-color" href='/profile'>Profile</a>

                  <h7 class="has-text-weight-bold subtitle-color"> | </h7>
                  <button class='has-text-weight-bold button-style custom-font-ot3 text-shadow' id='logout'>Logout</button>
                {{else}}
                  <a class="has-text-weight-bold size-25 custom-font-ot3 subtitle-color text-shadow" href='/login'>Login or Sign-up</a>
                {{/if}}
                  <h7 class="has-text-weight-bold subtitle-color"> | </h7>
                  <a class="has-text-weight-bold subtitle-color" href='/theories'>Theories</a>
              </nav>
            </div>
          </header>
          <main class=''>
            <!-- Render the sub layout -->
            {{{body}}}
          </main>
          <footer>

          </footer>
        </main>
      </div>
    </section>

    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script src="/assets/js/main.js"></script>
  </body>

</html>